{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~components": ["src/components"],
      "~features/*": ["src/features/*"],
      "~hooks": ["src/hooks"],
      "~icons/*": ["src/icons/*"],
      "~navigators": ["src/navigators"],
      "~store": ["src/store"],
      "~theme": ["src/theme"],
      "~utils/*": ["src/utils/*"]
    }
  }
}
